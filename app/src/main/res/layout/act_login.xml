<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/layout_title_bar" />




    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:minHeight="69dp"
        app:errorEnabled="true"
        app:hintTextAppearance="@style/HintError">

        <EditText
            android:id="@+id/et_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/photo_hint"
            android:maxLength="10"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="#252525"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:theme="@style/MyEditText" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_image_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="69dp"
            app:errorEnabled="true"
            app:hintTextAppearance="@style/HintError">

            <EditText
                android:id="@+id/et_image_verfication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/image_verification"
                android:maxLength="4"
                android:singleLine="true"
                android:textColor="#252525"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>


        <ImageView
            android:id="@+id/image_verfication"
            android:layout_width="81dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_verfication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="69dp"
            app:errorEnabled="true"
            app:hintTextAppearance="@style/HintError">

            <EditText
                android:id="@+id/et_verfication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/verification"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="#252525"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/get_verfication"
            android:layout_width="81dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/get_verification"
            android:textColor="#333333"
            android:textSize="13sp" />

    </RelativeLayout>


    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_btn"
        android:text="@string/login_txt"
        android:textColor="@color/white"
        android:textSize="18dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/new_user"
        android:textColor="#666666"
        android:textSize="13sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="38dp"
        android:text="@string/no_to_students"
        android:textColor="#888888"
        android:textSize="13sp" />

</LinearLayout>